{
  "name": "api-server",  
  "description": "A LoopBack API server with local User auth",
  "extends": "empty-server",
  "files": {
    "path": "/api-server"
  },
  "package": {
    "dependencies": {
      "loopback-connector-mysql": "^3.0.0"
    }
  },
  "server": {
    "middleware":[
      {
        "phase": "initial",
        "function": "helmet#xssFilter"
      },
      {
        "phase": "initial",
        "function": "helmet#frameguard",
        "params": [
          "deny"
        ]
      },
      {
        "phase": "initial",
        "function": "helmet#hsts",
        "params": {
          "maxAge": 0,
          "includeSubdomains": true
        }
      },
      {
        "phase": "initial",
        "function": "helmet#hidePoweredBy"
      },
      {
        "phase": "initial",
        "function": "helmet#noSniff"
      },
      {
        "phase": "initial",
        "function": "helmet#noCache",
        "enabled": false
      }
    ]
  }
}
