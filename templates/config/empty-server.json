{
  "name": "empty-server",  
  "description": "A LoopBack API server with local User auth",
  "package": {
    "version": "1.0.0",
    "main": "server/server.js",
    "scripts": {
      "lint": "eslint .",
      "start": "node .",
      "posttest": "npm run lint && nsp check"
    },
    "dependencies": {
      "compression": "^1.0.3",
      "cors": "^2.5.2",
      "helmet": "^1.3.0",
      "loopback": "^3.0.0",
      "loopback-boot": "^2.6.5",
      "serve-favicon": "^2.0.1",
      "strong-error-handler": "^1.0.1"
    }
  },
  "server": {
    "modelsMetadata": {
      "sources": [
        "loopback/common/models",
        "loopback/server/models",
        "../common/models",
        "./models"
      ],
      "mixins": [
        "loopback/common/mixins",
        "loopback/server/mixins",
        "../common/mixins",
        "./mixins"
      ]
    },
    "config": {
      "restApiRoot": "/api" ,
      "host": "0.0.0.0",
      "port": 3000,
      "remoting": {
        "context": false,
        "rest": {
          "handleErrors": false,
          "normalizeHttpPath": false,
          "xml": false
        },
        "json": {
          "strict": false,
          "limit": "100kb"
        },
        "urlencoded": {
          "extended": true,
          "limit": "100kb"
        },
        "cors": false
      }
    },
    "modelConfigs": [
      {
        "name": "User",
        "dataSource": "db",
        "public": true
      },
      {
        "name": "AccessToken",
        "dataSource": "db",
        "public": true
      },
      {
         "name": "ACL",
         "dataSource": "db",
         "public": true
      },
      {
         "name": "RoleMapping",
         "dataSource": "db",
         "public": true
      },
      {
         "name": "Role",
         "dataSource": "db",
         "public": true
      }
    ],
    "datasources": [
      {
        "name": "db",
        "connector": "memory"
      }
    ],
    "middleware": [
      {
        "phase": "initial",
        "subPhase": "before",
        "function": "loopback#favicon"
      },
      {
        "phase": "initial",
        "function": "compression"
      },
      {
        "phase": "initial",
        "function": "cors",
        "params": {
          "origin": true,
          "credentials": true,
          "maxAge": 86400
        }
      }
    ]
  },
  "files": {
    "path": "/empty-server"
  }   
}
